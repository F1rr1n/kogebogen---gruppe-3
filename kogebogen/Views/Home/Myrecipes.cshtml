@model User
@using kogebogen.Repository;
@using kogebogen.Models;
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
      integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

@{
    ViewData["Title"] = "MyRecipes";
}

<h1>Myrecipes</h1>


<form class="myRecipes" method="post" asp-controller="Home" asp-action="RemoveRecipe">
    @foreach (Recipe r in Model.Own)
    {
        <div class="flex-container" style="display:flex">
            <h2>@r.Name</h2>
            <img src="@r.ImageUrl" />
            <input type="hidden" name="r" value="@r.Name" />
            <button type="submit" class="fas fa-minus"></button>
        </div>
    }
</form>


