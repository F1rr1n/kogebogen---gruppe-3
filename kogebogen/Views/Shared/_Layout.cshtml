<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kogebogen</title>
    <link href="~/css/master.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navBar" id="navBaren">
            <a class="home" asp-controller="Home" asp-action="Index">Kogebogen</a>
            <a class="menu fas fa-bar" asp-controller="Home" asp-action="Menu">
            </a>
            <button class="search fas fa-search" id="searchButtonNav"></button>
            <a asp-controller="Home" asp-action="Menu" id="hamburger" class="fas fa-bars">
            </a>
        </nav>
    </header>
    <!-- Modalbox for søgning -->
    <form asp-action="Search" asp-controller="Home" method="post" class="searchForm" id="searchModal">
        <input type="text" name="searchValue" id="searchField" /> <br />
        <button type="submit" class="fas fa-search"></button>
    </form>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="swipeField"></div>

    <!-- Modalbox med profilen -->
    <div class="profileModal" id="theProfile">
        <img src="~/img/chilli.jpg" />
        <h2 class="profilName">Lasse</h2>
        <ol>
            <li>
                <form asp-controller="Home" method="post" asp-action="Myrecipes">
                    <button type="submit">
                        <span class="fas fa-address-book"></span> Mine opskrifter
                    </button>
                </form>
            </li>
            <li>
                <form method="post" asp-controller="Home" asp-action="Addfav">
                    <button type="submit">
                        <span class="fas fa-heart"></span> Mine favoritter
                    </button>
                </form>
            </li>
            <li>
                <form method="post" asp-controller="Home" asp-action="AddRecipe">
                    <button type="submit">
                        <span class="fas fa-plus"></span> Tilføj ny opskrift
                    </button>
                </form>
            </li>
            <li>
                <button type="submit">
                    <span class="fas fa-unlock-alt"></span> Log ud
                </button>

            </li>
        </ol>
        <button class="fas fa-arrow-left" id="back"></button>
    </div>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/lib/pure/swiped-events.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
